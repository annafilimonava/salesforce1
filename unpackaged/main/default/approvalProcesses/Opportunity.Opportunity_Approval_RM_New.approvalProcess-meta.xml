    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approval_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>eoin.loughney@planetpayment.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>michael.larkin@planetpayment.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Opportunity_Value__c</field>
                <operation>greaterThan</operation>
                <value>&quot;EUR 50,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.TF_Rebate__c</field>
                <operation>greaterOrEqual</operation>
                <value>55</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Opportunity_Value__c</field>
                <operation>lessThan</operation>
                <value>&quot;EUR 75,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.TF_Annual_Vouchers__c</field>
                <operation>lessThan</operation>
                <value>5000</value>
            </criteriaItems>
        </entryCriteria>
        <label>Regional Director Approval</label>
        <name>Regional_Director_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Approval_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Set_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>New Process</description>
    <emailTemplate>unfiled$public/Approval_Request_Product</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>Account.Owning_Country__c</field>
            <operation>equals</operation>
            <value>Cyprus,Czech Republic,Denmark,Faroe Islands,Finland,Greece,Iceland,Norway,Poland,Slovak Republic,Sweden,Russian Federation,Turkey,Hungary,Portugal</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Product__c</field>
            <operation>notEqual</operation>
            <value>Wirecard</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
