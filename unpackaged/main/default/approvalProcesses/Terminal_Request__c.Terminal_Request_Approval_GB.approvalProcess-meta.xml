<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>david.perrotta@planetpayment.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR 2 OR 3</booleanFilter>
            <criteriaItems>
                <field>Terminal_Request__c.Quantity_Vx__c</field>
                <operation>greaterOrEqual</operation>
                <value>10</value>
            </criteriaItems>
            <criteriaItems>
                <field>Terminal_Request__c.Quantity_PTF__c</field>
                <operation>greaterOrEqual</operation>
                <value>10</value>
            </criteriaItems>
            <criteriaItems>
                <field>Terminal_Request__c.Quantity_PAX__c</field>
                <operation>greaterOrEqual</operation>
                <value>10</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Terminal Request Approval GB</label>
        <name>Terminal_Request_Approval</name>
        <rejectionActions>
            <action>
                <name>Request_Denied</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Request_Denied_GB</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Request_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Request_Approved_GB</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>andrew.neale@planetpayment.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Terminal Request Approval POS GB</label>
        <name>Terminal_Request_Approval_POS</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Request_Denied</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Request_Denied_GB</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/Terminal_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(TEXT(Approval_Status__c) &lt;&gt; &quot;Approved&quot;,  Owner:Queue.QueueName = &quot;Sales Support GB&quot;, OR(Quantity_Vx__c  &gt; 0, Quantity_PAX__c &gt; 0, Quantity_PTF__c &gt; 0))</formula>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Request_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Terminal Request Approval GB</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
