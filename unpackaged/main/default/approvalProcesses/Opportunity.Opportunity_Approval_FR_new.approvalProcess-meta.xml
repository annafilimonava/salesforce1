<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>StageName</field>
        <field>Opportunity_Value__c</field>
        <field>RecordType</field>
        <field>Type</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approval_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>denis.leroy@planetpayment.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>julien.richard@planetpayment.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Type</field>
                <operation>notEqual</operation>
                <value>Upgrade</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Opportunity_Value__c</field>
                <operation>lessThan</operation>
                <value>&quot;EUR 30,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Approval_Status__c</field>
                <operation>equals</operation>
                <value>Not Approved,Pending,Rejected</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Country Manager/Finance Approval</label>
        <name>Country_Manager_Finance_Approval</name>
        <rejectionActions>
            <action>
                <name>Approval_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Set_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approval_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>denis.leroy@planetpayment.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>julien.richard@planetpayment.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Approval_Status__c</field>
                <operation>equals</operation>
                <value>Not Approved,Pending,Rejected</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Type</field>
                <operation>notEqual</operation>
                <value>Upgrade</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Opportunity_Value__c</field>
                <operation>greaterOrEqual</operation>
                <value>&quot;EUR 30,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Country Manager/Finance Approval +30K</label>
        <name>Country_Manager_Finance_Approval_30K</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Approval_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Set_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approval_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Product_Group_Email</name>
                <type>Alert</type>
            </action>
            <action>
                <name>TF_Proposed_Solution_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>maurizio.simeone@planetpayment.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.TF_Solution_Approval_Status__c</field>
                <operation>equals</operation>
                <value>Not Approved,Pending,Rejected</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.TF_Proposed_Solution__c</field>
                <operation>equals</operation>
                <value>PI</value>
            </criteriaItems>
        </entryCriteria>
        <label>PI Approval</label>
        <name>PI_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Approval_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>TF_Proposed_Solution_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>New Version</description>
    <emailTemplate>unfiled$public/Approval_Request_Product</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Opportunity.Owning_Country__c</field>
            <operation>equals</operation>
            <value>France</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Product__c</field>
            <operation>notEqual</operation>
            <value>Wirecard</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Product__c</field>
            <operation>equals</operation>
            <value>TF,TF &amp; DCC,TF &amp; DCC &amp; Payments</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Opportunity Approval FR_new</label>
    <processOrder>10</processOrder>
    <recallActions>
        <action>
            <name>Set_to_Not_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
