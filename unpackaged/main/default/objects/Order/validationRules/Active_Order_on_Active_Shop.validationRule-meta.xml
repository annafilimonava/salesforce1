<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Active_Order_on_Active_Shop</fullName>
    <active>false</active>
    <errorConditionFormula>AND(TEXT(Account.Type)&lt;&gt;&quot;Active&quot;, TEXT(Status)=&quot;Activated&quot;)</errorConditionFormula>
    <errorMessage>You may not activate an order on a Shop that is not active.</errorMessage>
</ValidationRule>
