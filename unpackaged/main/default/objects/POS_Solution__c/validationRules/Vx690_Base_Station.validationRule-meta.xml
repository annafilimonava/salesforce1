<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Vx690_Base_Station</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
ISPICKVAL(Unit__r.Unit_Subtype__c, &quot;Vx690&quot;),  
NOT(ISPICKVAL(Base_Station_Unit__r.Unit_Subtype__c, &quot;Vx690 Charging Cradle&quot;))
)</errorConditionFormula>
    <errorDisplayField>Base_Station__c</errorDisplayField>
    <errorMessage>A Vx690 terminal must always be accompanied with a Vx690 Charging Cradle.</errorMessage>
</ValidationRule>
