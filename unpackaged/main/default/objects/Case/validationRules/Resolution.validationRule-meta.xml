<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Resolution</fullName>
    <active>true</active>
    <description>Resolution is mandatory in order to close a case.</description>
    <errorConditionFormula>AND(TEXT(Resolution__c) = &quot;&quot;, TEXT(Status) = &quot;Closed&quot;,  RecordType.DeveloperName = &quot;Customer Support&quot;)</errorConditionFormula>
    <errorDisplayField>Resolution__c</errorDisplayField>
    <errorMessage>You must enter a Resolution before closing a case.</errorMessage>
</ValidationRule>
