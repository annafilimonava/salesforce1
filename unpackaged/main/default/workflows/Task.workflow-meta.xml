<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Task_Complete</fullName>
        <description>Task Complete</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Merchant_Service/Closed_Task</template>
    </alerts>
    <fieldUpdates>
        <fullName>Log_a_Call</fullName>
        <field>Type</field>
        <literalValue>Call</literalValue>
        <name>Log a Call</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Log a Call</fullName>
        <actions>
            <name>Log_a_Call</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Task.ActivityOriginType</field>
            <operation>equals</operation>
            <value>Call</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Task Closed</fullName>
        <actions>
            <name>Task_Complete</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND(CreatedById &lt;&gt; LastModifiedById,  ISCHANGED(Status), TEXT(Status) = &quot;Completed&quot;,  CreatedBy.Country = &quot;Italy&quot;)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
