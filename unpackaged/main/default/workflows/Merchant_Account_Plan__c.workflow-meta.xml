    <rules>
        <fullName>Account Plan Not Updated</fullName>
        <active>true</active>
        <formula>AND(
Account_Manager__c &lt;&gt; &quot;X&quot;,
CONTAINS(Name, TEXT(YEAR(TODAY()))),
OR(
TEXT(Account__r.Type) = &quot;Active&quot;,
TEXT(Account__r.Type) = &quot;Prospect&quot;
)
)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Account_Plan_Not_Updated1</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Merchant_Account_Plan__c.LastModifiedDate</offsetFromField>
            <timeLength>30</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Owner%27s Manager</fullName>
        <actions>
            <name>Update_Email</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Merchant_Account_Plan__c.Country__c</field>
            <operation>equals</operation>
            <value>Austria,Cyprus,Czech Republic,Denmark,Faroe Islands,Finland,Greece,Iceland,Norway,Poland,Russian Federation,Sweden,Turkey</value>
        </criteriaItems>
        <description>Updates Owner&#39;s Manager&#39;s Email on Merchant Account Plan</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
